<main>
  <nav>
    <form action="/navigate" method="POST" class="form-nav row">
      <div class="column">
        <input type="string" name="url" class="search-url" autofocus />
        <div class="form-options row">
          <label>
            <input type="checkbox" name="fonts" class="checkbox-fonts" /> Fonts
          </label>
          <label>
            <input type="number" max="100" min="1" name="quality" class="input-quality" value="60" /> Quality
          </label>
        </div>
      </div>
      <div class="column">
        <button type="submit" class="btn-submit">Go</button>
      </div>
    </form>
  </nav>
  <section>
    <% if (locals.html) { %>
      <iframe src="data:text/html;charset=utf-8,<%= encodeURI(locals.html) %>" style="width: 100%; height: 100%;"></iframe>
    <% } else { %>
      <iframe style="width: 100%; height: 100%;"></iframe>
    <% } %>
  </section>
</main>